@model System.String
@{
    string Id = ViewData.TemplateInfo.HtmlFieldPrefix;
    string previewId = Id + "preview";
}
<table width="100%" style="border:0px;">
    <tr>
        <td width="50%" >
            @Html.TextArea("", (string)ViewData.TemplateInfo.FormattedModelValue, new { style = "width:100%;height:100px;", onkeyup = "$('#" + previewId + "').contents().find('body').html($('#" + Id + "').val());" })
        </td>        
        <td width="50%">
            <div id="view"></div>
                <iframe id="@previewId" width="100%" height="100"></iframe>
                <script type="text/javascript">
                    $('#@previewId').contents().find('body').html($('#@Id').val());
                </script>
        </td>
    </tr>
</table>